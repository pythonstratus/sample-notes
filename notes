SELECT 
  CASE 
    WHEN prior_four_quarter_average IS NULL THEN 'This is NULL'
    WHEN prior_four_quarter_average = 0 THEN 'This is ZERO'
    ELSE 'Other value'
  END as value_check
FROM your_table



df.select(
  F.isnull('prior_four_quarter_average').alias('is_null_check'),
  (F.col('prior_four_quarter_average') == 0).alias('is_zero_check')
).show()
