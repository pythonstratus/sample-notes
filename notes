SELECT 
    srvname,
    srvoptions,
    case when active_connections > 0 then 'Active' else 'Inactive' end as status,
    active_connections
FROM pg_foreign_server fs
LEFT JOIN (
    SELECT foreign_server_oid, count(*) as active_connections 
    FROM pg_foreign_server_fdw_connections 
    GROUP BY foreign_server_oid
) ac ON fs.oid = ac.foreign_server_oid
WHERE srvname = 'ses_ods_fs';
