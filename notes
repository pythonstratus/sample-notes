-- Check if the foreign server exists and its configuration
SELECT 
    srvname,
    srvoptions,
    srvowner::regrole as owner,
    fdwname as wrapper_name
FROM pg_foreign_server fs
JOIN pg_foreign_data_wrapper fdw ON fs.srvfdw = fdw.oid
WHERE srvname = 'ses_ods_fs';

-- To test if the connection is working, you can try:
SELECT count(*) 
FROM information_schema.foreign_tables 
WHERE foreign_server_name = 'ses_ods_fs';
