SELECT column_name 
FROM information_schema.columns 
WHERE table_schema = 'mcr' 
AND table_name = 'line_item_data'
ORDER BY ordinal_position;


CREATE OR REPLACE VIEW mcr.line_item_data_view AS
SELECT 
    CAST(prior_four_quarter_average AS NUMERIC(38,10)) as prior_four_quarter_average,
    CAST(ratio_of_current_to_prior_4_avg AS NUMERIC(38,10)) as ratio_of_current_to_prior_4_avg,
    -- List all other columns here
    column1,
    column2,
    column3,
    -- etc...
FROM mcr.line_item_data;
