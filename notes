CREATE OR REPLACE VIEW mcr.line_item_data_view AS
SELECT 
    -- Cast specific columns to NUMERIC(38,10)
    CAST(prior_four_quarter_average AS NUMERIC(38,10)) as prior_four_quarter_average,
    CAST(ratio_of_current_to_prior_4_avg AS NUMERIC(38,10)) as ratio_of_current_to_prior_4_avg,
    -- Include all other columns from original table
    -- assuming these are the rest of your columns, adjust as needed
    *  EXCEPT (prior_four_quarter_average, ratio_of_current_to_prior_4_avg)
FROM mcr.line_item_data;



SELECT 
    column_name, 
    data_type,
    numeric_precision,
    numeric_scale
FROM information_schema.columns 
WHERE table_name = 'line_item_data_view'
    AND table_schema = 'mcr'
    AND column_name IN ('prior_four_quarter_average', 'ratio_of_current_to_prior_4_avg');
